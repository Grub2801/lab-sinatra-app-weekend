<h2>Edit Lawyer</h2>

<form class="form lawyer" id="edit-lawyer" method="post" action="/lawyers/<%= @lawyer.id %>">
  <input type="hidden" name="_method" value="put">

  <div class="form-group">
    <label for="lawyer[name]">Name:</label>
    <input class="form-control" type="text" name="lawyer[name]" id="lawyer_name" value="<%= @lawyer.name %>">
  </div>

  <div class="form-group">
    <label for="lawyer[qualification_area]">Area of Qualification:</label>
    <input class="form-control" type="text" name="lawyer[qualification_area]" id="lawyer_qualification_area" value="<%= @lawyer.qualification_area %>">
  </div>

  <div class="form-group">
    <label for="lawyer[qualification_year]">Year of Qualification:</label>
    <input class="form-control" type="data" name="lawyer[qualification_year]" id="lawyer_qualification_year" value="<%= @lawyer.qualification_year %>">
  </div>

  <div class="form-group">
    <label for="lawyer[company]">Company:</label>
    <input class="form-control" type="text" name="lawyer[company]" id="lawyer_company" value="<%= @lawyer.company %>">
  </div>

  <div class="form-group">
    <label for="lawyer[location]">Location:</label>
    <input class="form-control" type="text" name="lawyer[location]" id="lawyer_location" value="<%= @lawyer.location %>">
  </div>

  <div class="form-group">
    <label for="lawyer[phone]">Phone:</label>
    <input class="form-control" type="text" name="lawyer[phone]" id="lawyer_phone" value="<%= @lawyer.phone %>">
  </div>

  <div>
    <input type="submit" class="btn" value="Add lawyer">
  </div>
</form>