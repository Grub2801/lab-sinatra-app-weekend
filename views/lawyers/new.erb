n<h2>New Lawyer</h2>

<form class="form lawyer" id="update-lawyer" method="POST" action="/lawyers/<%= @lawyer.id %>/update">

  <div class="form-group">
    <label for="lawyer-name">Name:</label>
    <input class="form-control" type="test" name="lawyer[name]" id="lawyer_name">
  </div>

  <div class="form-group">
    <label for="lawyer_qualification_area">Area of Qualification:</label>
    <input class="form-control" type="text" name="lawyer[qualification_area]" id="lawyer_qualification_area">
  </div>

  <div class="form-group">
    <label for="lawyer_qualification_year">Year of Qualification:</label>
    <input class="form-control" type="text" name="lawyer[qualification_year]" id="lawyer_qualification_year">
  </div>

  <div class="form-group">
    <label for="lawyer_company">Company:</label>
    <input class="form-control" type="text" name="lawyer[company]" id="lawyer_company">
  </div>

  <div class="form-group">
    <label for="lawyer_location">Location:</label>
    <input class="form-control" type="text" name="lawyer[location]" id="lawyer_location">
  </div>

  <div class="form-group">
    <label for="lawyer_email">Location:</label>
    <input class="form-control" type="text" name="lawyer[email]" id="lawyer_email">
  </div>

  <button type="submit" class="btn btn-primary">Add Lawyer</button>

</form>